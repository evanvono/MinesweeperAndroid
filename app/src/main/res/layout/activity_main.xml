<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/contentLayout"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:weightSum="3"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <com.evanvonoehsen.minesweeper.ui.MinesweeperView
            android:id="@+id/minesweeperView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="H,1:1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">
        <Space
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:layout_height="1dp" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:id="@+id/btnReset"
            android:text="@string/text_new_game" />

        <Space
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_board_size"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etSize"
                android:hint="15"
                android:inputType="number" />
        </LinearLayout>


        <Space
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:layout_height="1dp" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:id="@+id/btnFlag"
            android:text="@string/text_place_flags" />

        <Space
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:layout_height="1dp" />
    </LinearLayout>
</LinearLayout>